{
    "name": "samsonasik/error-hero-module",
    "type": "library",
    "description": "A Hero for your ZF2 and ZF3 application to trap php errors & exceptions",
    "keywords": ["zf2", "zf3", "expressive", "error", "hero", "handler"],
    "homepage": "https://github.com/samsonasik/ErrorHeroModule",
    "license": "MIT",
    "authors": [
        {
            "name": "Abdul Malik Ikhsan",
            "email": "samsonasik@gmail.com",
            "homepage": "http://samsonasik.wordpress.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",
        "zendframework/zend-json": "^2.5|^3.0"
    },
    "require-dev": {
        "kahlan/kahlan": "^3.0.0",
        "satooshi/php-coveralls": "^1.0",
        "zendframework/zend-servicemanager": "^2.5|^3.0"
    },
    "autoload": {
        "psr-4": {
            "ErrorHeroModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
             "ErrorHeroModule\\Spec\\": "spec/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "zf": {
            "module": "ErrorHeroModule",
            "config-provider": "ErrorHeroModule\\ConfigProvider"
        }
    }
}
